<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <welcome-file-list>
    <welcome-file>/MyHtml.html</welcome-file>
  </welcome-file-list>
  
  	<servlet>

      <servlet-name>ShowUserServlet</servlet-name>

      <servlet-class>adminServlet.ShowUserServlet</servlet-class>

	</servlet>

	<servlet-mapping>
	
	      <servlet-name>ShowUserServlet</servlet-name>
	
	      <url-pattern>/admin/showAdmin</url-pattern>
	
	</servlet-mapping>

	<!-- product -->
	<servlet>
	      <servlet-name>ProductServlet</servlet-name>
	      <servlet-class>adminServlet.product.ProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>ProductServlet</servlet-name>
	      <url-pattern>/admin/showProduct</url-pattern>
	</servlet-mapping>
	
	<servlet>
	      <servlet-name>AddProductServlet</servlet-name>
	      <servlet-class>adminServlet.product.AddProductServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>AddProductServlet</servlet-name>
	      <url-pattern>/admin/addProduct</url-pattern>
	</servlet-mapping>
 
 
	<!-- User -->
	<servlet>
	      <servlet-name>UserRegisterServlet</servlet-name>
	      <servlet-class>userServlet.UserRegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>UserRegisterServlet</servlet-name>
	      <url-pattern>/user/signUp</url-pattern>
	</servlet-mapping>
	
	<servlet>
	      <servlet-name>UserLoginServlet</servlet-name>
	      <servlet-class>userServlet.UserLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>UserLoginServlet</servlet-name>
	      <url-pattern>/user/userLogin</url-pattern>
	</servlet-mapping>
	
	<!-- admin -->
	<servlet>
	      <servlet-name>AdminLoginServlet</servlet-name>
	      <servlet-class>adminServlet.AdminLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>AdminLoginServlet</servlet-name>
	      <url-pattern>/admin/adminLogin</url-pattern>
	</servlet-mapping>
	
	<!-- basket -->
	<!-- 列表 -->
	<servlet>
	      <servlet-name>UserShowBasket</servlet-name>
	      <servlet-class>userServlet.basket.UserShowBasket</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>UserShowBasket</servlet-name>
	      <url-pattern>/user/userShowBasket</url-pattern>
	</servlet-mapping>
	<!-- 添加 -->
	<servlet>
	      <servlet-name>AddToBasket</servlet-name>
	      <servlet-class>userServlet.basket.AddToBasket</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>AddToBasket</servlet-name>
	      <url-pattern>/user/addToBasket</url-pattern>
	</servlet-mapping>
	<!-- 修改 -->
	<servlet>
	      <servlet-name>EditBasket</servlet-name>
	      <servlet-class>userServlet.basket.EditBasket</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>EditBasket</servlet-name>
	      <url-pattern>/user/editBasket</url-pattern>
	</servlet-mapping>
	<!-- 删除 -->
	<servlet>
	      <servlet-name>DeleteBasket</servlet-name>
	      <servlet-class>userServlet.basket.DeleteBasket</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>DeleteBasket</servlet-name>
	      <url-pattern>/user/deleteBasket</url-pattern>
	</servlet-mapping>
	
	<!-- order -->
	<!-- 生成订单 -->
	<servlet>
	      <servlet-name>UserNewOrder</servlet-name>
	      <servlet-class>userServlet.order.UserNewOrder</servlet-class>
	</servlet>
	<servlet-mapping>
	      <servlet-name>UserNewOrder</servlet-name>
	      <url-pattern>/user/userNewOrder</url-pattern>
	</servlet-mapping>
</web-app>
